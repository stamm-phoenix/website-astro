---
interface Props {
  href: string;
  variant?: 'inline' | 'card' | 'back' | 'footer';
  class?: string;
  external?: boolean;
}

const {
  href,
  variant = 'inline',
  class: className = '',
  external = false,
} = Astro.props;

const variantClasses = {
  // Standard inline link in content
  inline: 'font-semibold underline text-brand-800 hover:text-brand-900',
  // Link in cards for "more info" type actions
  card: 'inline-flex items-center text-sm underline text-brand-800 hover:text-brand-900 font-semibold',
  // Back navigation link
  back: 'text-sm font-semibold text-brand-900 underline',
  // Footer navigation link
  footer: 'hover:underline font-semibold text-neutral-900',
};

const classes = [variantClasses[variant], className].filter(Boolean).join(' ');

const externalAttrs = external ? { target: '_blank', rel: 'noopener noreferrer' } : {};
---

