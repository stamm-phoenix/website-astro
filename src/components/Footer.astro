---
import Heading from './Heading.astro';
import TextLink from './TextLink.astro';
import Text from './Text.astro';

const year = new Date().getFullYear();
---
<div class="container">
  <div class="relative overflow-hidden px-3 py-4 md:px-5 md:py-5">
    <div class="grid-overlay"></div>
    <div class="z-10 grid gap-8 md:grid-cols-3">
      <div class="space-y-3">
        <div class="flex items-center gap-3">
          <div class="size-12 flex items-center justify-center" aria-hidden="true">
            <img src="/stammeslilie.svg" alt="" class="object-contain w-full h-full" />
          </div>
          <div>
            <div class="text-xs uppercase tracking-[0.12em] text-[var(--color-dpsg-red)] font-semibold">DPSG</div>
            <span class="font-semibold text-brand-900 text-base">Stamm Phoenix</span>
          </div>
        </div>
        <Text>
          Pfadfinden vor Ort â€“ Abenteuer, Gemeinschaft und Verantwortung.
        </Text>
      </div>
      <nav>
        <Heading level={3} variant="footer">Navigation</Heading>
        <ul class="mt-3 space-y-2 text-sm">
          <li><TextLink href="/" variant="footer">Start</TextLink></li>
          <li><TextLink href="/gruppenstunden" variant="footer">Gruppenstunden</TextLink></li>
          <li><TextLink href="/vorstand" variant="footer">Vorstand</TextLink></li>
          <li><TextLink href="/kontakt" variant="footer">Kontakt</TextLink></li>
        </ul>
      </nav>
      <address class="not-italic">
        <Heading level={3} variant="footer">Kontakt</Heading>
        <ul class="mt-3 space-y-2 text-sm">
          <li class="text-neutral-800">Feldkirchen-Westerham</li>
          <li><TextLink href="mailto:kontakt@stamm-phoenix.de" variant="footer">kontakt@stamm-phoenix.de</TextLink></li>
          <li><TextLink href="/impressum" variant="footer">Impressum & Datenschutz</TextLink></li>
        </ul>
      </address>
    </div>
    <div class="mt-6 border-t border-neutral-200 pt-4 text-xs text-neutral-700 flex flex-wrap items-center gap-3 relative z-10">
      <span>&copy; {year} DPSG Stamm Phoenix. Alle Rechte vorbehalten.</span>
      <img src="/dpsg_ohne.png" alt="DPSG Wort-Bild-Marke" width="177" height="70" class="h-7 w-auto object-contain" loading="lazy" decoding="async" />
    </div>
  </div>
</div>
