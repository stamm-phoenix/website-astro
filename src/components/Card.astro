---
interface Props {
  variant?: 'default' | 'muted';
  accent?: boolean;
  hover?: boolean;
  class?: string;
}

const { variant = 'default', accent = false, hover = false, class: className = '' } = Astro.props;

const baseClasses = variant === 'muted' ? 'surface-muted' : 'surface';

const classes = [
  baseClasses,
  'p-5',
  accent && 'border-l-4 border-l-[var(--color-accent-500)]',
  hover && 'transition duration-150 hover:-translate-y-0.5 hover:shadow-lift',
  className,
]
  .filter(Boolean)
  .join(' ');
---

<article class={classes}>
  <slot />
</article>
