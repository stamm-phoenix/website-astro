---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import homepageContent from '../data/homepage.json';

const { hero, quickInfo, callToAction } = homepageContent;
const sortedQuickInfo = [...quickInfo].sort((a, b) => a.order - b.order);
const quickInfoIcons = ['üå±', '‚õ∫', 'ü§ù'];
---
<BaseLayout title="Willkommen | Stamm Phoenix" description="DPSG Stamm Phoenix Feldkirchen-Westerham ‚Äì Pfadfinden vor Ort.">
  <Header slot="header" />

  <!-- Skip to content -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:fixed focus:top-2 focus:left-2 focus:bg-white focus:text-black focus:p-2 focus:rounded focus:shadow">
    Zum Inhalt springen
  </a>

  <!-- Hero -->
  <section
    id="main-content"
    class="relative overflow-hidden rounded-[1.25rem] border border-white/10 bg-gradient-to-br from-[var(--color-brand-900)] via-[var(--color-brand-800)] to-[var(--color-brand-700)] p-7 md:p-10 text-white shadow-lift"
    aria-labelledby="page-title"
  >
    <div class="pointer-events-none absolute inset-0 opacity-60">
      <div class="absolute inset-[-40%] bg-[radial-gradient(circle_at_20%_20%,rgba(255,255,255,0.15),transparent_40%),radial-gradient(circle_at_85%_15%,rgba(255,255,255,0.18),transparent_45%),linear-gradient(135deg,rgba(255,255,255,0.06),rgba(255,255,255,0.02))]"></div>
      <div class="grid-overlay"></div>
      <img src="/dpsg-lilie_outline.png" alt="" class="absolute right-[-6%] top-[-8%] w-40 md:w-56 opacity-[0.15] rotate-6 select-none" aria-hidden="true" loading="lazy" decoding="async" />
    </div>
    <div class="grid items-center gap-10 md:grid-cols-[1fr_1.1fr]">
      <div class="hidden md:flex items-center justify-center">
        <div class="relative">
          <div class="absolute inset-0 blur-3xl opacity-40 bg-white/10"></div>
          <img src="/Logo_Phoenix_Neu_Vector.svg" alt="" class="relative w-72 h-72 object-contain drop-shadow-lg" aria-hidden="true" loading="lazy" decoding="async" />
        </div>
      </div>
      <div class="z-10 max-w-3xl space-y-4 md:order-2 order-1">
        <div class="flex flex-wrap items-center gap-2">
          <span class="badge bg-white/90 border-white/40 text-brand-900">DPSG Feldkirchen-Westerham</span>
          <span class="pill bg-white/10 text-white/90 border border-white/20">
            ‚ú® Pfadfinden vor Ort
          </span>
        </div>
        <h1 id="page-title" class="mt-1 text-3xl md:text-5xl font-serif font-extrabold leading-tight">
          {hero.title}
        </h1>
        <p class="mt-4 text-base md:text-lg text-white/90">
          {hero.subtitle}
        </p>
        <p class="mt-3 text-base md:text-lg text-white/80">
          {hero.description}
        </p>
        <div class="mt-6 flex flex-wrap gap-3">
          <a
            href={hero.primaryButtonLink}
            class="inline-flex items-center rounded-full bg-white px-4 py-2.5 text-sm font-semibold text-brand-900 shadow-soft transition hover:-translate-y-[1px]"
          >
            {hero.primaryButtonText}
          </a>
          <a
            href={hero.secondaryButtonLink}
            class="inline-flex items-center gap-2 rounded-full border border-white/60 bg-white/5 px-4 py-2.5 text-sm font-semibold text-white hover:bg-white/15"
          >
            {hero.secondaryButtonText}
            <span aria-hidden="true" class="text-base">‚Üí</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick info -->
  <section class="mt-12 space-y-4" aria-labelledby="quick-info-heading">
    <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
      <h2 id="quick-info-heading" class="text-2xl md:text-3xl font-serif font-semibold text-brand-900 underline-accent">Was uns ausmacht</h2>
    </div>
    <div class="grid gap-6 md:grid-cols-3">
      {sortedQuickInfo.map((info, index) => (
        <article class="surface p-5 transition duration-150 hover:-translate-y-0.5 hover:shadow-lift">
          <div class="flex items-center gap-3">
            <div class="size-10 rounded-full bg-[var(--color-brand-50)] flex items-center justify-center text-xl text-[var(--color-brand-700)]">
              {quickInfoIcons[index] ?? '‚≠ê'}
            </div>
            <h3 class="text-lg font-semibold text-brand-900 leading-snug">{info.title}</h3>
          </div>
          <p class="mt-3 text-sm text-neutral-700 leading-relaxed">{info.description}</p>
        </article>
      ))}
    </div>
  </section>

  <!-- Mach mit! -->
  <section class="mt-12 relative overflow-hidden rounded-[1.1rem] border border-[var(--color-brand-800)] bg-gradient-to-br from-[var(--color-brand-900)] via-[var(--color-brand-800)] to-[var(--color-brand-700)] p-7 md:p-10 text-white shadow-lift" aria-labelledby="join-title">
    <div class="pointer-events-none absolute inset-0 opacity-60">
      <div class="grid-overlay"></div>
      <div class="absolute right-[-10%] top-[-20%] h-48 w-48 rounded-full bg-[var(--color-accent-500)]/20 blur-3xl"></div>
    </div>
    <div class="max-w-3xl relative z-10 space-y-4">
        <div class="flex items-center gap-2 text-xs uppercase tracking-[0.12em] text-white/80">Jetzt entdecken</div>
        <h2 id="join-title" class="text-2xl md:text-3xl font-serif font-bold">{callToAction.title}</h2>
        <p class="text-base md:text-lg text-white/85 leading-relaxed">
          {callToAction.description}
        </p>
        <div class="flex flex-wrap items-center gap-4">
        <a href={callToAction.buttonLink} class="inline-flex items-center gap-2 rounded-full bg-white px-4 py-2.5 text-sm font-semibold text-brand-900 shadow-soft transition hover:-translate-y-[1px]">
          {callToAction.buttonText}
          <span aria-hidden="true">‚Üí</span>
        </a>
        <span class="pill border border-white/25 bg-white/10 text-white/85">
          ‚≠ê Gemeinsam unterwegs
        </span>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
