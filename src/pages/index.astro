---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import homepageContent from '../data/homepage.json';

const { hero, quickInfo, callToAction } = homepageContent;
const sortedQuickInfo = [...quickInfo].sort((a, b) => a.order - b.order);
---
<BaseLayout title="Willkommen | Stamm Phoenix" description="DPSG Stamm Phoenix Feldkirchen-Westerham â€“ Pfadfinden vor Ort.">
  <Header slot="header" />

  <!-- Skip to content -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:fixed focus:top-2 focus:left-2 focus:bg-white focus:text-black focus:p-2 focus:rounded focus:shadow">
    Zum Inhalt springen
  </a>

  <!-- Hero -->
  <section
    id="main-content"
    class="relative overflow-hidden rounded-lg border border-brand-800 bg-brand-900 p-6 md:p-10 text-white shadow-soft"
    aria-labelledby="page-title"
  >
    <span class="wegzeichen-begin absolute left-4 top-6"></span>
    <span class="wegzeichen-end absolute right-6 bottom-6"></span>
    <div class="grid items-center gap-10 md:grid-cols-[1.2fr_1fr]">
      <div class="z-10 max-w-3xl">
        <p class="text-sm uppercase tracking-[0.08em] text-white/75">DPSG Feldkirchen-Westerham</p>
        <h1 id="page-title" class="mt-2 text-3xl md:text-5xl font-serif font-extrabold leading-tight underline-accent">
          {hero.title}
        </h1>
        <p class="mt-4 text-base md:text-lg text-white/90">
          {hero.subtitle}
        </p>
        <p class="mt-3 text-base md:text-lg text-white/80">
          {hero.description}
        </p>
        <div class="mt-6 flex flex-wrap gap-3">
          <a
            href={hero.primaryButtonLink}
            class="inline-flex items-center rounded-sm bg-white px-4 py-2 text-sm font-semibold text-brand-900 transition hover:-translate-y-[1px] hover:shadow-soft"
          >
            {hero.primaryButtonText}
          </a>
          <a
            href={hero.secondaryButtonLink}
            class="inline-flex items-center rounded-sm border border-white/50 px-4 py-2 text-sm font-semibold text-white hover:bg-white/10"
          >
            {hero.secondaryButtonText}
          </a>
        </div>
      </div>
      <div class="relative">
        <div class="relative aspect-[4/3] overflow-hidden rounded-md border-2 border-white/30 bg-[radial-gradient(circle_at_20%_20%,rgba(255,255,255,.08),transparent_35%),radial-gradient(circle_at_80%_0,rgba(255,255,255,.08),transparent_30%),linear-gradient(135deg,rgba(255,255,255,.06),rgba(255,255,255,.02))]">
          <div class="absolute inset-0 border border-white/20 rounded-sm m-4 pointer-events-none"></div>
          <div class="absolute left-4 top-4 flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.1em] text-white/70">
            <span class="wegzeichen-begin"></span>
            Unterwegs seit
          </div>
          <div class="absolute right-4 bottom-4 flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.1em] text-white/70">
            Abenteuer
            <span class="wegzeichen-end"></span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick info -->
  <section class="mt-10 grid gap-6 md:grid-cols-3" aria-labelledby="quick-info-heading">
    <h2 id="quick-info-heading" class="sr-only">Schnellinfo</h2>
    {sortedQuickInfo.map((info) => (
      <article class="card border-l-4 border-[var(--color-accent-500)] shadow-none">
        <h3 class="text-lg font-semibold text-brand-900">{info.title}</h3>
        <p class="mt-2 text-sm text-neutral-700 leading-relaxed">{info.description}</p>
      </article>
    ))}
  </section>

  <!-- Mach mit! -->
  <section class="mt-10 rounded-lg border border-brand-800 bg-brand-900 p-6 md:p-10 text-white shadow-soft relative" aria-labelledby="join-title">
    <span class="wegzeichen-begin absolute left-5 top-6"></span>
    <div class="max-w-3xl">
      <h2 id="join-title" class="text-2xl md:text-3xl font-serif font-bold underline-accent">{callToAction.title}</h2>
      <p class="mt-4 text-base md:text-lg text-white/85">
        {callToAction.description}
      </p>
      <div class="mt-6 flex items-center gap-3">
        <a href={callToAction.buttonLink} class="inline-flex items-center rounded-sm bg-white px-4 py-2 text-sm font-semibold text-brand-900 transition hover:-translate-y-[1px] hover:shadow-soft">
          {callToAction.buttonText}
        </a>
        <span class="wegzeichen-end"></span>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
