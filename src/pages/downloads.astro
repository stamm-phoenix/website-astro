---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PageHeader from "../components/PageHeader.astro";
import DownloadsList from "../components/DownloadsList.svelte";
---

<BaseLayout
  title="Downloads | Stamm Phoenix"
  description="Dokumente und Dateien zum Herunterladen vom DPSG Stamm Phoenix Feldkirchen-Westerham."
>
  <Header slot="header" />

  <PageHeader
    title="Downloads"
    description="Hier findest du wichtige Dokumente und Dateien zum Herunterladen."
  />

  <section class="mt-6" aria-labelledby="downloads-list-heading">
    <h2 id="downloads-list-heading" class="sr-only">Verf√ºgbare Downloads</h2>
    <DownloadsList client:only="svelte" />
  </section>

  <Footer slot="footer" />
</BaseLayout>
