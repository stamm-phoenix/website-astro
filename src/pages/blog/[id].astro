---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import TextLink from "../../components/TextLink.astro";
import BlogPost from "../../components/BlogPost.svelte";
import blogData from "../../data/blog.json";
import type { BlogPost as BlogPostType } from "../../lib/types";

export function getStaticPaths() {
  return (blogData as BlogPostType[]).map((post) => ({
    params: { id: post.id },
  }));
}
---

<BaseLayout
  title="Blog | Stamm Phoenix"
  description="Blog-Beitrag vom DPSG Stamm Phoenix Feldkirchen-Westerham."
>
  <Header slot="header" />

  <section class="prose" aria-labelledby="blog-back-link">
    <TextLink id="blog-back-link" href="/blog" variant="back">&larr; Zur√ºck zum Blog</TextLink>
    <BlogPost client:only="svelte" />
  </section>

  <Footer slot="footer" />
</BaseLayout>
