---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
import TextLink from '../components/TextLink.astro';

const suggestedPages = [
  { href: '/gruppenstunden', label: 'Gruppenstunden' },
  { href: '/aktionen', label: 'Aktionen' },
  { href: '/mitmachen', label: 'Mitmachen' },
  { href: '/vorstand', label: 'Vorstand' },
];
---

<BaseLayout 
  title="Seite nicht gefunden | Stamm Phoenix" 
  description="Diese Seite existiert leider nicht."
>
  <Header slot="header" />

  <section
    class="error-hero relative overflow-hidden rounded-[1.25rem] border border-white/10 bg-gradient-to-br from-[var(--color-brand-900)] via-[var(--color-brand-800)] to-[var(--color-brand-700)] px-6 py-16 md:px-10 md:py-24 text-white shadow-lift"
    aria-labelledby="error-title"
  >
    <div class="pointer-events-none absolute inset-0 opacity-60">
      <div class="absolute inset-[-40%] bg-[radial-gradient(circle_at_20%_20%,rgba(255,255,255,0.12),transparent_40%),radial-gradient(circle_at_80%_80%,rgba(255,255,255,0.08),transparent_45%)]"></div>
      <div class="grid-overlay"></div>
    </div>

    <img 
      src="/dpsg-lilie_outline.png" 
      alt="" 
      class="lilie-float pointer-events-none absolute right-[-8%] top-[-12%] w-48 md:w-72 lg:w-80 opacity-[0.12] rotate-6 select-none" 
      aria-hidden="true" 
      loading="eager" 
      decoding="async" 
    />

    <div class="pointer-events-none absolute -left-20 bottom-0 h-56 w-56 rounded-full bg-[var(--color-accent-500)]/15 blur-3xl"></div>
    <div class="pointer-events-none absolute -right-16 top-1/3 h-48 w-48 rounded-full bg-white/10 blur-3xl"></div>

    <div class="relative z-10 flex flex-col items-center text-center max-w-2xl mx-auto">
      <span class="error-number font-serif text-[7rem] md:text-[10rem] lg:text-[12rem] font-bold leading-none text-white/90 tracking-tight select-none">
        404
      </span>

      <h1 
        id="error-title" 
        class="mt-2 md:mt-4 text-2xl md:text-3xl lg:text-4xl font-serif font-bold"
      >
        Hoppla! Diese Seite existiert nicht.
      </h1>

      <p class="mt-4 text-base md:text-lg text-white/80 leading-relaxed max-w-lg">
        Vielleicht hast du dich verlaufen – passiert den besten Pfadfindern. 
        Kein Problem, wir helfen dir zurück!
      </p>

      <div class="mt-8 flex flex-wrap justify-center gap-3">
        <Button href="/" variant="primary">
          Zur Startseite
        </Button>
        <Button href="/kontakt" variant="secondary" arrow>
          Kontakt
        </Button>
      </div>
    </div>
  </section>

  <section class="mt-8 surface px-6 py-6 md:px-8 md:py-7" aria-labelledby="suggestions-heading">
    <p id="suggestions-heading" class="text-sm font-semibold text-brand-900 mb-3">
      Vielleicht suchst du:
    </p>
    <nav aria-label="Vorgeschlagene Seiten">
      <ul class="flex flex-wrap gap-x-6 gap-y-2">
        {suggestedPages.map((page) => (
          <li>
            <TextLink href={page.href} class="text-sm">
              {page.label}
            </TextLink>
          </li>
        ))}
      </ul>
    </nav>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .error-number {
    text-shadow: 
      0 4px 24px rgba(0, 0, 0, 0.15),
      0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .lilie-float {
    animation: float 8s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(6deg);
    }
    50% {
      transform: translateY(-12px) rotate(6deg);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .lilie-float {
      animation: none;
    }
  }
</style>
