---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageHeader from '../components/PageHeader.astro';
import InfoCard from '../components/InfoCard.astro';
import ContactPerson from '../components/ContactPerson.astro';
import TextLink from '../components/TextLink.astro';
import CardGrid from '../components/CardGrid.astro';
---

<BaseLayout title="Kontakt | Stamm Phoenix" description="Kontakt zum DPSG Stamm Phoenix Feldkirchen-Westerham.">
  <Header slot="header" />

  <PageHeader
    label="Kontakt"
    title="Meld dich bei uns"
    description="Egal ob Fragen zu Gruppenstunden, Aktionen oder zur Mitgliedschaft – wir freuen uns über jede Nachricht."
  >
    <CardGrid class="mt-6">
      <InfoCard title="E-Mail">
        <p class="text-sm text-neutral-800 leading-relaxed">
          <TextLink href="mailto:kontakt@stamm-phoenix.de">
            kontakt@stamm-phoenix.de
          </TextLink>
        </p>
      </InfoCard>

      <InfoCard title="Vorstand">
        <div class="space-y-3">
          <ContactPerson
            name="Simon Lamminger"
            phone="+49 175 7539860"
            address="Ölbergring 10B"
            city="83620 Feldkirchen-Westerham"
          />
          <ContactPerson
            name="Johannes Schmalstieg"
            phone="+49 177 2687874"
            address="Spitzingstrasse 18"
            city="83620 Feldkirchen-Westerham"
          />
        </div>
      </InfoCard>
    </CardGrid>
  </PageHeader>

  <Footer slot="footer" />
</BaseLayout>
