---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageHeader from '../components/PageHeader.astro';
import InfoCard from '../components/InfoCard.astro';
import TextLink from '../components/TextLink.astro';
import CardGrid from '../components/CardGrid.astro';
import Button from '../components/Button.astro';
---

<BaseLayout title="Kontakt | Stamm Phoenix" description="Kontakt zum DPSG Stamm Phoenix Feldkirchen-Westerham.">
  <Header slot="header" />

  <PageHeader
    title="Meld dich bei uns"
    description="Egal ob Fragen zu Gruppenstunden, Aktionen oder zur Mitgliedschaft – wir freuen uns über jede Nachricht."
  >
    <CardGrid class="mt-6">
      <InfoCard title="E-Mail">
        <p class="text-sm text-neutral-800 leading-relaxed">
          <TextLink href="mailto:kontakt@stamm-phoenix.de">
            kontakt@stamm-phoenix.de
          </TextLink>
        </p>
        <p class="text-sm text-neutral-600 mt-2">
          Für Fragen zu Gruppenstunden, Schnupperstunden oder allgemeine Anfragen.
        </p>
      </InfoCard>

      <InfoCard title="Vorstand">
        <p class="text-sm text-neutral-800 leading-relaxed">
          Bei offiziellen Anliegen wende dich an unseren <TextLink href="/vorstand">Stammesvorstand</TextLink>.
        </p>
        <Button href="/vorstand" variant="outline" size="sm" class="mt-3" arrow>
          Zum Vorstand
        </Button>
      </InfoCard>
    </CardGrid>
  </PageHeader>

  <Footer slot="footer" />
</BaseLayout>
