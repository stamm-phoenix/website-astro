---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import TextLink from '../../components/TextLink.astro';
import AktionDetail from '../../components/AktionDetail.svelte';
import aktionenData from '../../data/aktionen.json';

export function getStaticPaths() {
  return aktionenData.map((aktion) => ({
    params: { uid: aktion.id },
  }));
}
---

<BaseLayout title="Aktion | Stamm Phoenix" description="Details zum Termin des DPSG Stamm Phoenix.">
  <Header slot="header" />

  <section class="prose">
    <TextLink href="/aktionen" variant="back">&larr; Zur√ºck zum Kalender</TextLink>
    <AktionDetail client:only="svelte" />
  </section>

  <Footer slot="footer" />
</BaseLayout>
