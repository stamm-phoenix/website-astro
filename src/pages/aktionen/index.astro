---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import PageHeader from '../../components/PageHeader.astro';
import TextLink from '../../components/TextLink.astro';
import AktionenList from '../../components/AktionenList.svelte';

const ICS_URL = '/api/aktionen-ics';
---

<BaseLayout title="Kalender | Stamm Phoenix" description="Termine und Aktionen des DPSG Stamm Phoenix.">
    <Header slot="header" />

    <PageHeader
        title="Kalender"
        description="Hier finden Sie kommende Aktionen und Termine unseres Stammes."
    >
        <p class="text-sm">
            iCal/ICS abonnieren:
            <TextLink href={ICS_URL}>Kalender-Link</TextLink>
        </p>
    </PageHeader>

    <div class="mt-4">
        <AktionenList client:only="svelte" />
    </div>

    <Footer slot="footer" />
</BaseLayout>
