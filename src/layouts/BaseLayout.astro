---
import '../styles/global.css';
const { title = 'Stamm Phoenix', description = 'DPSG Stamm Phoenix Feldkirchen-Westerham' } = Astro.props;
---
<html lang="de" class="bg-[var(--color-neutral-50)]">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#2f80ed" />
  </head>
  <body>
    <header class="sticky top-0 z-50 border-b border-[var(--color-neutral-200)] bg-white/85 backdrop-blur supports-[backdrop-filter]:bg-white/75">
      <slot name="header" />
      <div class="h-1 w-full bg-[var(--color-accent-500)]"></div>
    </header>

    <main id="main" class="container py-8 md:py-12">
      <slot />
    </main>

    <footer class="mt-12 border-t border-[var(--color-neutral-200)] bg-white">
      <slot name="footer" />
    </footer>
  </body>
</html>
