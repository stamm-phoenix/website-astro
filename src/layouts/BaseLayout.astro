---
import '../styles/global.css';
const { title = 'Stamm Phoenix', description = 'DPSG Stamm Phoenix Feldkirchen-Westerham' } = Astro.props;
---
<html lang="de" class="bg-[var(--color-neutral-50)]">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#2f80ed" />
  </head>
  <body class="relative overflow-x-hidden">
    <div class="pointer-events-none absolute inset-x-0 top-0 h-[320px] bg-gradient-to-b from-[var(--color-brand-100)]/90 via-white/70 to-transparent"></div>
    <div class="pointer-events-none absolute -left-24 top-10 h-64 w-64 rounded-full bg-[var(--color-brand-400)]/15 blur-3xl"></div>
    <div class="pointer-events-none absolute -right-16 top-20 h-60 w-60 rounded-full bg-[var(--color-accent-500)]/12 blur-3xl"></div>

    <header class="sticky top-0 z-50 border-b border-[var(--color-neutral-200)]/80 bg-white/85 backdrop-blur supports-[backdrop-filter]:bg-white/75">
      <slot name="header" />
      <div class="h-1 w-full bg-gradient-to-r from-[var(--color-accent-500)] via-[var(--color-brand-700)] to-[var(--color-accent-500)]"></div>
    </header>

    <main id="main" class="container py-8 md:py-12 relative z-10">
      <slot />
    </main>

    <footer class="mt-12 border-t border-[var(--color-neutral-200)] bg-white relative z-10">
      <slot name="footer" />
    </footer>
  </body>
</html>
